      "target": "portfolio",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/shared-assets/**",
          "destination": "/shared-assets/**"
        }
      ]
    },
    {
      "target": "blog",
